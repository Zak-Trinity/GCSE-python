copnum = 50
guess = 0
attempts = 0
while guess != copnum:
    guess = int(input("Guess a number: "))
    if guess > 50:
        print("your guess was too high")
        attempts += 1
    elif guess < 50:
        print("your guess was too low")
        attempts += 1
    else:
        print("correct")
        attempts += 1
print("it took you {} tries to get the number correct".format(attempts))
