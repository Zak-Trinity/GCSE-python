end = False

def exit():
    print("Exiting ...")
    end = True
    return end

def timetable_get():
    while True:
        time = int(input("What time do you want (between 0 - 12): "))
        if time >= 0 and time <= 12:
            break
    return time

def timetable_print(time):
    print(f"The time you have selected is {time}")

def addition():
    num_1 = int(input("Enter a number: "))
    num_2 = int(input("Enter another: "))
    print(f"{num_1} + {num_2} = {num_1 + num_2}")

def menu():
    while True:
        print("")
        choice = int(input("Press 1 to go to timetable, press 2 to add and 3 to exit. "))
        if choice == 1:
            time = timetable_get()
            timetable_print(time)
            end = False
            break
        elif choice == 2:
            addition()
            end = False
        elif choice == 3:
            end = exit()
            break
        else:
            print("Invalid input")
    return end

while end == False:
    end = menu()
    if end == True:
        break
